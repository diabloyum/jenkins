{
    "rulesDirectory": [
        "node_modules/codelyzer"
    ],
    "extends": ["angular-tslint-rules"],
    "rules": {
        "indent": [2, 4],
        "no-redundant-jsdoc": false,
        "max-file-line-count": false,
        "no-implicit-dependencies": false,
        "no-import-side-effect": false,
        "use-component-view-encapsulation": false,
        "no-null-keyword": false,
        "prefer-conditional-expression": false,
        "prefer-for-of": false,
        "triple-equals": false,
        "no-string-literal": false,
        "no-parameter-reassignment": false,
        "template-i18n": false,
        "no-console": false,
        "directive-selector": false,
        "component-selector": false,
        "no-dynamic-delete": false,
        "only-arrow-functions": [
            true,
            "allow-declarations"
        ],
        "max-line-length": [ true, 200 ],

        // TODO: Disabled rule for better compatibility about current implementation
        "newline-per-chained-call": false,
        // TODO: Disabled rule for better compatibility about current implementation
        "cyclomatic-complexity": [true, 35],
        "forin": false,
        "radix": false,
        "typedef": false,

        "promise-function-async": false,
        "no-void-expression": false,
        "no-floating-promises": false,
        "no-for-in-array": false,

        //TODO: Disable template validation temporal since there have a large number of issue in the existing code
        "template-conditional-complexity": false,
        "template-cyclomatic-complexity": false,
        "template-use-track-by-function": false,
        "template-no-call-expression": false,
        "template-banana-in-box": false,
        "template-no-negated-async": false,

        // TODO: Disabled because the issue exists in the tslint https://github.com/palantir/tslint/issues/4838
        "strict-comparisons" : false
    }
}
